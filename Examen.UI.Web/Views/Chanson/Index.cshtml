@model IEnumerable<Examen.ApplicationCore.Domain.Chanson>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-action="Sort">Create New</a>
    <fieldset>
    <input type="submit" value="Sort" asp-controller="Chanson" asp-action="Sort" />
    </fieldset>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChansonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StyleMusical)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSortie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VuesYoutube)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtisteFk)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChansonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StyleMusical)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSortie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VuesYoutube)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtisteFk)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.ChansonId  }) |
                @Html.ActionLink("Details", "Details", new { id=item.ChansonId }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.ChansonId  })
                    <a asp-controller="Artiste" asp-action="Details" asp-route-id="@item.ArtisteFk">Artiste</a>
            </td>
        </tr>
}
    </tbody>
</table>
